{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noEmit": true
  }
}
